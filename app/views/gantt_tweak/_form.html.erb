<%= form_tag gantt_tweak_update_path(format: :html), method: :put do %>
  <div class="box tabular settings">
    <p>
      <label><%= l(:label_gantt_tweak_number_of_months) %></label>
      <%= number_field_tag "months", @settings[@project.id.to_s][:months], step: 1, min: 1 %>
    </p>
    <p>
      <label><%= l(:label_gantt_tweak_offset_months) %></label>
      <%= number_field_tag "offset_months", @settings[@project.id.to_s][:offset_months], step: 1 %>
    </p>
    <p>
      <label><%= l(:label_gantt_tweak_subject_width) %></label>
      <%= number_field_tag "subject_width", @settings[@project.id.to_s][:subject_width], step: 10, min: 10 %>
    </p>
  </div>
  <%= hidden_field_tag "project_id", @project.id %>
  <%= hidden_field_tag "tab", :gantt_tweak %>
  <%= submit_tag l(:button_save) %>
<% end %>
